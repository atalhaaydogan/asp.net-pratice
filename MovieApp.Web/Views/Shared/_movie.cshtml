@model Movie

<div class="card mb-3">
    <div class="row ">
        <div class="col-md-4">
            <img src="/img/@Model.ImageUrl" class="@Model.Title" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                 <p>
                     <a class="btn btn-primary" href="/movies/details/@Model.MovieId">details</a>
                 </p>
            </div>
        </div>
    </div>
</div>
