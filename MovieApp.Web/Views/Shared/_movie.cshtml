@model Movie

<div class="card mb-3">
    <div class="row ">
        <div class="col-md-4">
            <img src="/img/@Model.ImageUrl" class="@Model.Title" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                 <p>
                    <a class="btn btn-primary" asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId">details</a>
                    <a class="btn btn-primary" asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.MovieId">edit</a>
                 </p>
            </div>
        </div>
    </div>
</div>
