@model List<Movie>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="/css/style.css" rel="stylesheet" />
</head>
<body>
    <h1>Film Lİstesi</h1>
    <div id="filmler">

        @foreach (var movie in Model)
        {
            <div class="film">
                <img src="/img/@movie.ImageUrl" alt="@movie.Title"/>
                <p>@movie.Title</p>
                <p>@movie.Description</p>
                <p>@movie.Director</p>
                <p>
                    <ul>
                        @foreach (var player in @movie.Players)
                        {
                            <li>@player</li>
                        }
                    </ul>
                </p>
            </div>

        }
    </div>
</body>
</html>